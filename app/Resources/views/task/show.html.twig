{% extends 'base.html.twig' %}

{% block body %}
    <h1>Task</h1>

    <table>
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ task.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ task.name }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ task.description }}</td>
        </tr>
        <tr>
            <th>Done</th>
            <td>{% if task.done %}Yes</td><br>
            <td> {% else %}No{% endif %}</td>
        </tr>
        <tr>
            <th>Duedate</th>
            <td>{% if task.dueDate %}{{ task.dueDate|date('Y-m-d') }}{% endif %}</td>
        </tr>

        <tr>
            <th>user</th>
            <td>{{ task.user }}</td>
        </tr>

        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('category_index') }}">Back to the Category list</a>
        </li>
        <li>
            <a href="{{ path('fos_user_profile_show') }}">Back to the Users list</a>
        </li>
        <li>
            <a href="{{ path('task_index') }}">Back to the Task list</a>
        </li>
        <li>
            {% if task.done %}
                <a>edit Task</a>
            {% else %}
                <a href="{{ path('task_edit', { 'id': task.id }) }}">edit Task</a>
            {% endif %}
        </li>
        <li>
            {{ form_start(delete_form) }}
            <input type="submit" value="Delete Task">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}